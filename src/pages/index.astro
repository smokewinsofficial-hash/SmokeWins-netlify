---
import Base from "../layouts/Base.astro";

const pageTitle = "SmokeWins — Your guide to Canadian online casinos";
const pageDesc  = "Independent guides: payments, fast withdrawals and responsible gambling. No casino listings yet.";
---
<Base title={pageTitle} description={pageDesc} canonical="/">
  <section class="container" style="padding:48px 0 28px">
    <h1 style="margin:0 0 12px">Independent guide for Canadians</h1>
    <p class="muted" style="max-width:720px;margin:0 0 22px">
      Clear breakdowns of payment methods, fast payouts, and verification. No casino lists yet.
    </p>

    <div style="display:flex;gap:12px;flex-wrap:wrap">
      <a class="btn btn--accent" href="/guides">Read Guides</a>
      <a class="btn" href="/contact">Partnership inquiries</a>
    </div>
  </section>

  <section class="container" style="padding:16px 0 8px">
    <h2 style="margin:0 0 12px">What we cover</h2>
    <ul style="margin:0;padding-left:18px;line-height:1.8">
      <li>Interac & card payments — fees and limits</li>
      <li>Fast withdrawals — practical checklist</li>
      <li>Verification & account security basics</li>
      <li>Responsible gambling resources (Canada)</li>
    </ul>
  </section>
</Base>
