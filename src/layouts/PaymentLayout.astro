---
// src/layouts/PaymentLayout.astro
import Base from "./Base.astro";

const {
  title = "Payment guide (Canada)",
  description = "Payment method details for Canadian players.",
  canonical,
  noindex = false,
  updated = undefined,   // esim. "2025-09-01"
  tags = [],             // esim. ["payments","canada"]
} = Astro.props;
---
<Base {title} {description} {canonical} {noindex}>
  <header class="container header">
    <h1 class="title">{title}</h1>
    {description && <p class="muted desc">{description}</p>}
    {(updated || tags.length) && (
      <p class="meta">
        {updated && <>Updated: {updated}</>}
        {updated && tags.length ? " · " : ""}
        {tags.length ? <>Tags: {tags.join(", ")}</> : null}
      </p>
    )}
  </header>

  <!-- Huom: Base.astro sisältää jo <main>-elementin, joten käytämme <section> -->
  <section class="container content">
    <article class="prose">
      <slot />
    </article>
  </section>
</Base>

<style>
  .container { padding: 32px 0; }
  .header { padding-bottom: 12px; }
  .title { margin: 0 0 10px; }
  .desc { max-width: 760px; margin: 0 0 12px; }
  .meta { font-size: 12px; opacity: .75; margin: 0; }
  .content { padding-top: 8px; padding-bottom: 40px; }

  .prose :where(h2,h3) { margin: 1.2em 0 .4em; }
  .prose p { margin: .6em 0; }
  .prose ul { margin: .4em 0 .8em 1.2em; line-height: 1.7; }

  .muted { color: #b7c4e9; }
</style>
